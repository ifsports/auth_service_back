# URLs do Frontend para redirecionamento do OAuth
FRONTEND_APP_URL="http://localhost:3000"
FRONTEND_LOGIN_SUCCESS_PATH="/auth/handle-token"
FRONTEND_LOGIN_ERROR_PATH="/"

