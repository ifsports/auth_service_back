SECRET_KEY="gere_uma_chave_secreta_aqui_para_seu_ambiente"
DEBUG=True
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1"

# Credenciais da sua aplicação cliente no SUAP
SUAP_CLIENT_ID="SEU_CLIENT_ID_DO_SUAP"
